print('*** BMI ***')

weight=float(input('Please give your weight (kg): '))
height=float(input('Please give your height (meter): '))

BMI=weight/(height**2)

print('Your BMI:', BMI)

if BMI < 18.5:
    print('Slim')
elif BMI < 25:
    print('Normal')
elif BMI < 30:
    print('Overweight')
elif BMI >=30:
    print('Obese')
